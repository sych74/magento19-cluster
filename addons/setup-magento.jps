{
    "jpsType": "update",
    "name": "Magento setup addon",
    "homepage": "https://Jelastic.com",
    "description": "This package for Magento configurations",
    "globals": {
        "MAGE_ROOT": "/var/www/webroot/ROOT",
        "ADMIN_PASSWD": "${settings.admin_passwd}",
        "DB_HOST": "${settings.db_host}",
        "DB_NAME": "magento",
        "DB_USER": "${settings.db_user}",
        "DB_PASS": "${settings.db_pass}"
    },
    "onInstall": {
        "cmd[${nodes.cp[0].id}]": [
            "mysql -u${globals.DB_USER} -p${globals.DB_PASS} -h ${globals.DB_HOST} -e \"CREATE DATABASE IF NOT EXISTS ${globals.DB_NAME};\" ",
            "php ${globals.MAGE_ROOT}/bin/magento setup:install -s --backend-frontname=admin --db-host=${globals.DB_HOST} --db-name=${globals.DB_NAME} --db-user=${globals.DB_USER} --db-password=${globals.DB_PASS} --base-url=${env.url} --admin-firstname=Admin --admin-lastname=AdminLast --admin-email=${user.email} --admin-user=admin --admin-password=${globals.ADMIN_PASSWD}",
            "chown nginx:nginx -R ${globals.MAGE_ROOT}/*",
            "rm -rf ${globals.MAGE_ROOT}/var/*"
        ]
    }
}
